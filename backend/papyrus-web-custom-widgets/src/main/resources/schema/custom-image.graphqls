type CustomImageWidget implements Widget {
	id: ID!
	label: String!
	iconURL: [String!]!
	diagnostics: [Diagnostic!]!
	hasHelpText: Boolean!
	readOnly: Boolean!
	currentUuid: String!
}

extend type Mutation {
	newUuid(input: NewUuidInput!): NewUuidPayload!	
	removeUuid(input: RemoveUuidInput!): RemoveUuidPayload!
}

input NewUuidInput {
	id: ID!
	editingContextId: ID!
	representationId: ID!	
	customImageId: ID!
	newUuid: String!
}

union NewUuidPayload = SuccessPayload | ErrorPayload

input RemoveUuidInput {
	id: ID!
	editingContextId: ID!
	representationId: ID!	
	customImageId: ID!
	removeUuid: String!
}

union RemoveUuidPayload = SuccessPayload | ErrorPayload